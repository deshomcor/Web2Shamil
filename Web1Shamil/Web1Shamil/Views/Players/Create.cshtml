                <label asp-for="PlayersSurname" class="control-label"></label>
                <input asp-for="PlayersSurname" class="form-control" />
                <span asp-validation-for="PlayersSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamsId" class="control-label"></label>
                <select asp-for="TeamsId" class ="form-control" asp-items="ViewBag.TeamsId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

