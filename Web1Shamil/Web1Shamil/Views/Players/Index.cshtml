@model IEnumerable<Web1Shamil.Models.Classes.Players>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayersName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayersSurname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayersName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayersSurname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayersId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayersId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayersId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
